# ============================================
# FB AUTOMATION ONLINE - ENVIRONMENT VARIABLES
# ============================================

# -----------------
# Server Config
# -----------------
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# -----------------
# Database
# -----------------
# MongoDB
MONGODB_URI=mongodb://localhost:27017/fb-automation
# Przykład z autentykacją:
# MONGODB_URI=mongodb://admin:password@localhost:27017/fb-automation?authSource=admin

# Redis
REDIS_URL=redis://localhost:6379
# Przykład z hasłem:
# REDIS_URL=redis://:password@localhost:6379

# -----------------
# Security
# -----------------
# Generate: openssl rand -base64 32
JWT_SECRET=your-very-strong-secret-key-here-change-this
ENCRYPTION_KEY=your-encryption-key-for-cookies-32-chars

# API Token dla n8n (Bearer token)
API_TOKEN=your-api-token-for-n8n-webhooks

# -----------------
# External Services
# -----------------
# n8n webhooks
N8N_WEBHOOK_URL=https://n8n.example.com/webhook/fb-automation-input
LOG_ENDPOINT_URL=https://n8n.example.com/webhook/fb-automation-logs

# Google Gemini API (dla Playground)
GEMINI_API_KEY=your-gemini-api-key-here

# -----------------
# Features Config
# -----------------
# Multi-account
MAX_CONCURRENT_ACCOUNTS=5
MAX_POSTS_PER_ACCOUNT=10

# Browser
HEADLESS_MODE=true
ENABLE_SCREENSHOTS=true
ENABLE_VIDEO_RECORDING=false

# Storage paths
STORAGE_PATH=/app/storage
COOKIES_DIR=/app/storage/cookies
SCREENSHOTS_DIR=/app/storage/screenshots
VIDEOS_DIR=/app/storage/videos
LOGS_DIR=/app/storage/logs

# -----------------
# Anti-Ban Settings
# -----------------
DELAY_MIN_MINUTES=4
DELAY_MAX_MINUTES=18
ENABLE_HUMAN_BEHAVIOR=true
ENABLE_FINGERPRINT_SPOOFING=true

# Activity limits
MAX_POSTS_PER_DAY=50
MAX_ACTIONS_PER_DAY=100

# -----------------
# VNC Settings
# -----------------
VNC_ENABLED=true
VNC_PORT_START=5900
VNC_PORT_END=5999
NOVNC_PORT_START=6080
NOVNC_PORT_END=6099

# -----------------
# Dashboard
# -----------------
DASHBOARD_ENABLED=true
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# -----------------
# Logging
# -----------------
LOG_LEVEL=info
# Options: error, warn, info, debug

# -----------------
# Optional
# -----------------
# Sentry (error tracking)
# SENTRY_DSN=https://your-sentry-dsn

# Prometheus metrics
# METRICS_ENABLED=false
# METRICS_PORT=9090
